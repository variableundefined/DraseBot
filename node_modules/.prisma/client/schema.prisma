generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id         Int     @id @default(autoincrement())
  userID     String?
  name       String
  EFund      Int     @default(0)
  AFund      Int     @default(0)
  UsedUP     Float   @default(0)
  TotalUP    Float   @default(0)
  Occupation String  @default("\"None\"")
  GSheet     String  @default("\"None\"")
  Income     Int     @default(0)
  Users      Users?  @relation(fields: [userID], references: [id])
}

model Users {
  id        String      @id
  updatedAt DateTime    @updatedAt
  up        Float
  np        Int
  Character Character[]
}
